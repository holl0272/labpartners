<% @rows.each do |row| %>
  <section>

    <form action='/videos/<%= row['id'] %>/delete' method='post'>
        <button class="btn btn-danger">Delete Video</button>
    </form>

    <a href='/videos/<%= row['id'] %>/edit/'><button class="btn btn-warning">Edit Video</button></a>

    <%= row['title'] %>
    <%= row['genre'] %>
    <%= row['description'] %>
    <iframe width="560" height="315" src="http://www.youtube.com/embed/<%= row['url'] %>" frameborder="0" allowfullscreen></iframe>
  </section>
<% end %>


